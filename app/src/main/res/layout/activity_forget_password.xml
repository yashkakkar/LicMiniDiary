<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="com.yashkakkar.licagentdiary.login.ForgetPassword">

    <ImageView
        android:id="@+id/email_password_reset"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:maxWidth="25dp"
        app:srcCompat="@drawable/ic_email_authentication" />

    <TextView
        android:id="@+id/text_forget_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter you email address that you previously used."
        android:textAlignment="center"
        android:layout_marginBottom="69dp"
        android:layout_above="@+id/forget_password_btn"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/email_forget_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="username@gmail.com"
        android:inputType="textEmailAddress"
        android:layout_marginTop="78dp"
        android:layout_below="@+id/email_password_reset"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/forget_password_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FORGET PASSWORD"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/email_forget_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/go_to_login_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:text="Back"
        android:textAlignment="center" />

</RelativeLayout>
