    <RelativeLayout
        android:id="@+id/empty_list_members_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:background="@drawable/ic_tap_to_add_new_policy_holder" />

        <TextView
            android:id="@+id/listofnotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:text="Tap '+' to add a new policy holder"
            android:textColor="@color/primaryText"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/listofnotifications"
            android:layout_marginTop="14dp"
            android:foregroundGravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="Save your Lic contacts, so that you can easily follow-up through calling and messaging!"
            android:textColor="?attr/colorPrimaryDark" />

    </RelativeLayout>
</FrameLayout>