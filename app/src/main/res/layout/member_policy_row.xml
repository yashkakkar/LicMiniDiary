<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/m_policy_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:paddingTop="8dp"
                        android:text="Policy Name"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/m_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/m_policy_name"
                        android:layout_gravity="top|right"
                        android:background="@android:color/transparent"
                        android:padding="8dp"
                        android:paddingRight="8dp"
                        android:src="@drawable/ic_more_vert_black_24dp"
                        android:text="Button" />


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/m_premium_amt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/m_mode"
                        android:layout_alignBottom="@+id/m_mode"
                        android:layout_alignEnd="@+id/m_sa_amt"
                        android:layout_alignRight="@+id/m_sa_amt"
                        android:text="PREMIUM AMOUNT"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/m_sa_amt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/m_policy_number"
                        android:layout_marginEnd="17dp"
                        android:layout_marginRight="17dp"
                        android:text="SA AMOUNT"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/m_policy_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:text="Policy Number" />

                    <TextView
                        android:id="@+id/m_doc_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/m_policy_number"
                        android:layout_alignStart="@+id/m_policy_number"
                        android:layout_below="@+id/m_policy_number"
                        android:paddingBottom="8dp"
                        android:text="DOC DATE" />

                    <TextView
                        android:id="@+id/m_dlp_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/m_doc_date"
                        android:layout_alignStart="@+id/m_doc_date"
                        android:layout_below="@+id/m_doc_date"
                        android:paddingBottom="8dp"
                        android:text="DLP" />

                    <TextView
                        android:id="@+id/m_dom_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/m_dlp_date"
                        android:layout_alignStart="@+id/m_dlp_date"
                        android:layout_below="@+id/m_dlp_date"
                        android:layout_marginBottom="16dp"
                        android:text="DOM" />

                    <TextView
                        android:id="@+id/m_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:text="MODE"
                        android:layout_alignBaseline="@+id/m_dom_date"
                        android:layout_alignBottom="@+id/m_dom_date"
                        android:layout_toLeftOf="@+id/m_premium_amt"
                        android:layout_toStartOf="@+id/m_premium_amt" />
                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>